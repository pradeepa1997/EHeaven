<link rel="stylesheet" href="css/login.css">

<body style="height: 100% ;background-image: url(Images/index_background.png)">

    <div class="container">
        <div class="row">
            <div class="wrapper fadeInDown">
                <div id="formContent">
                    <img src="images/logo_login.png" class="logo">
                    <form style="padding-top: 30px" action="/users" method="post">
                        <input type="text" id="login" class="fadeIn second" name="username" placeholder="login" required>
